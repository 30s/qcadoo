<?xml version="1.0" encoding="UTF-8"?>
<plugin plugin="qcadooSecurity" version="0.4.0" system="true"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:security="http://schema.qcadoo.org/modules/security" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd
       http://schema.qcadoo.org/modules/security
       http://schema.qcadoo.org/modules/security.xsd
       http://schema.qcadoo.org/modules/localization
       http://schema.qcadoo.org/modules/localization.xsd">

	<information>
		<name>Qcadoo Framework Security</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

	<modules>
		<model:model model="user" resource="model/user.xml" />
		<model:model model="persistentToken" resource="model/persistentToken.xml" />
		
		
		<security:user-group name="01admins" role="ROLE_ADMIN"/>
		<security:user-group name="02supervisors" role="ROLE_SUPERVISOR"/>
		<security:user-group name="03users" role="ROLE_USER"/>
		<security:user login="admin" password="admin" lastName="generated admin" groupName="01admins"/>
		
		<localization:translation path="locales" />
		<localization:translation-group name="security" prefix="security" />
		
	</modules>

</plugin>